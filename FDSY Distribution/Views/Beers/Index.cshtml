@model IEnumerable<FDSY_Distribution.Models.Beer>

@{
    ViewBag.Title = "Index";
}

<h2>Take a look at the beers we distribute at FDSY, we're sure you'll enjoy each and every one of them.</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Brewery
        </th>
        <th>
            Price
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ABV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brewery.Name)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ABV)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BeerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BeerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BeerId })
        </td>
    </tr>
}

</table>
