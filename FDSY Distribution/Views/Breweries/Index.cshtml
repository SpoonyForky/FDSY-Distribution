@model IEnumerable<FDSY_Distribution.Models.Brewery>

@{
    ViewBag.Title = "Index";
}

<h2>Here's a list of the fine breweries we get our beer from. Great people.</h2>

<p>
    @Html.ActionLink("Add a new brewery", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YTDSales)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YTDSales)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BreweryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BreweryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BreweryId })
        </td>
    </tr>
}

</table>
